<div class="jumbotron"></div>
<div class="container-fluid container-fixed-lg">
  <div class="row">
    <p id="notice"><%= notice %></p>
    <!-- START PANEL -->
    <div class="panel ">
      <div class="panel-heading">
        <div class="panel-title">Listing Affiliates</div>
        <div class="pull-right m-b-10">
          <%= link_to 'New Affiliate', new_affiliate_path, class:'btn btn-primary' %>
        </div>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-hover table-condensed">
            <thead>
              <tr>
                <th>#</th>
                <th>Cep</th>
                <th>Responsible</th>
                <th>Geolocation</th>
                <th>City</th>
                <th>State</th>
                <th colspan="2">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @affiliates.each_with_index do |affiliate,i| %>
              <tr>
                <td><%= i+1 %></td>
                <td><%= affiliate.cep %></td>
                <td><%= affiliate.responsible %></td>
                <td><%= affiliate.geolocation %></td>
                <td><%= affiliate.city %></td>
                <td colspan="2">
                 <%= link_to '<i class="fa fa-eye"></i>'.html_safe, affiliate, class:'btn btn2 btn-complete' %>
                 <%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_affiliate_path(affiliate), class:'btn btn2 btn-warning' %>
                 <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, affiliate_path(affiliate), class:'btn btn2 btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
               </tr>
               <% end %>
             </tbody>
           </table>
         </div>
       </div>
     </div>
   </div>
 </div>

