<div class="jumbotron"></div>
<div class="container-fluid container-fixed-lg">
  <div class="row">
    <p id="notice"><%= notice %></p>
    <!-- START PANEL -->
    <div class="panel ">
      <div class="panel-heading">
      <div class="panel-title">Listing Costs</div>
        <div class="pull-right m-b-10">
          <%= link_to 'New Cost', new_cost_path, class:'btn btn-primary' %>
        </div>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-hover table-condensed">
            <thead>
              <tr>
                <th>#</th>
                <th>Value</th>
                <th>User</th>
                <th>Benefit</th>
                <th colspan="2">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @costs.each_with_index do |cost,i| %>
              <tr>
                <td><%= i+1 %></td>
                <td><%= cost.value %></td>
                <td><%= cost.user %></td>
                <td><%= cost.benefit %></td>
                <td colspan="2">
                 <%= link_to '<i class="fa fa-eye"></i>'.html_safe, cost, class:'btn btn2 btn-complete' %>
                 <%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_cost_path(cost), class:'btn btn2 btn-warning' %>
                 <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, cost_path(cost), class:'btn btn2 btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
               </tr>
               <% end %>
             </tbody>
           </table>
         </div>
       </div>
     </div>
   </div>
 </div>
