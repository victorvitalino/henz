<div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-body">
      <%= simple_form_for(@vehicle) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :patrimony %>
        <%= f.input :status_vehicle %>
        <%= f.input :vehicle_plate %>
        <%= f.association :vehicle_type %>
        <%= f.association :vehicle_service %>
        <%= f.association :provider %>
      </div>

      <div class="form-actions">
        <%= f.submit 'Salvar', class: 'btn btn-primary pull-right' %>
        
        <%= link_to 'Cancelar', vehicles_path, class: 'btn btn-danger pull-left' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
