<div class="jumbotron"></div>
<div class="container-fluid container-fixed-lg">
  <div class="row">
    <p id="notice"><%= notice %></p>
    <!-- START PANEL -->
    <div class="panel ">
      <div class="panel-heading">
        <div class="panel-title">Listing Vehicles</div>
        <div class="pull-right m-b-10">
          <%= link_to 'New Vehicle', new_vehicle_path, class:'btn btn-primary' %>
        </div>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-hover table-condensed">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Status</th>
                <th>Plate</th>
                <th>Type</th>
                <th>Service</th>
                <th>Provider</th>
                <th colspan="2">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @vehicles.each_with_index do |vehicle, index| %>
              <tr>
               <td><%= index+1 %></td>
               <td><%= vehicle.name %></td>
               <td><%= vehicle.status_vehicle %></td>
               <td><%= vehicle.vehicle_plate %></td>
               <td><%= vehicle.vehicle_type %></td>
               <td><%= vehicle.vehicle_service %></td>
               <td><%= vehicle.provider %></td>
               <td colspan="2">
                 <%= link_to '<i class="fa fa-eye"></i>'.html_safe, vehicle, class:'btn btn2 btn-complete' %>
                 <%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_vehicle_path(vehicle), class:'btn btn2 btn-warning' %>
                 <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, vehicle_path(vehicle), class:'btn btn2 btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
               </td>
             </tr>
             <% end %>
           </tbody>
         </table>
       </div>
     </div>
   </div>
 </div>
</div>
