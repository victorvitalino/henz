<div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-body">
      <%= simple_form_for(@work) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :local %>
        <%= f.input :geolocation %>
        <%= f.input :responsible %>
        <%= f.association :work_type %>
        <%= f.association :affiliate %>
      </div>

      <div class="form-actions">
        <%= f.submit 'Salvar', class: 'btn btn-primary pull-right' %>
        <%= link_to 'Cancelar', works_path, class: 'btn btn-danger pull-left' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
