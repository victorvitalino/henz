<div class="jumbotron"></div>
<div class="container-fluid container-fixed-lg">
  <div class="row">
    <p id="notice"><%= notice %></p>
    <!-- START PANEL -->
    <div class="panel ">
      <div class="panel-heading">
        <div class="panel-title">Listing Works</div><div class="pull-right m-b-10">
        <%= link_to 'New Work', new_work_path, class:'btn btn-primary' %>
      </div>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-hover table-condensed">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Local</th>
              <th>Geolocation</th>
              <th>Responsible</th>
              <th>Work type</th>
              <th>Affiliate</th>
              <th colspan="2">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @works.each_with_index do |work, i| %>
            <tr>
             <td><%= i+1 %></td>
             <td><%= work.name %></td>
             <td><%= work.local %></td>
             <td><%= work.geolocation %></td>
             <td><%= work.responsible %></td>
             <td><%= work.work_type %></td>
             <td><%= work.affiliate %></td>
             <td colspan="2">
               <%= link_to '<i class="fa fa-eye"></i>'.html_safe, work, class:'btn btn2 btn-complete' %>
               <%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_work_path(work), class:'btn btn2 btn-warning' %>
               <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, work_path(work), class:'btn btn2 btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
             </td>
           </tr>
           <% end %>
         </tbody>
       </table>
     </div>
   </div>
 </div>
</div>
</div>

