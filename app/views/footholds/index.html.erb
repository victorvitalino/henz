<div class="jumbotron"></div>
<div class="container-fluid container-fixed-lg">
  <div class="row">
    <p id="notice"><%= notice %></p>
    <!-- START PANEL -->
    <div class="panel ">
      <div class="panel-heading">
        <div class="panel-title">Listing Foothold</div>
        <div class="pull-right m-b-10">
        <%= link_to 'New foothold', new_foothold_path, class:'btn btn-primary' %>
        </div>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-hover table-condensed">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Local</th>
                <th>Responsible</th>
                <th>Geolocation</th>
                <th>Observation</th>
                <th>Affiliate</th>
                <th>Work</th>
                <th colspan="2">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @footholds.each_with_index do |foothold,i| %>
              <tr>
                <td><%= i+1 %></td>
                <td><%= foothold.name %></td>
                <td><%= foothold.local %></td>
                <td><%= foothold.responsible %></td>
                <td><%= foothold.geolocation %></td>
                <td><%= foothold.observation %></td>
                <td><%= foothold.affiliate %></td>
                <td><%= foothold.work %></td>
                <td colspan="2">
                 <%= link_to '<i class="fa fa-eye"></i>'.html_safe, foothold, class:'btn btn2 btn-complete' %>
                 <%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_foothold_path(foothold), class:'btn btn2 btn-warning' %>
                 <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, foothold_path(foothold), class:'btn btn2 btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
               </tr>
               <% end %>
             </tbody>
           </table>
         </div>
       </div>
     </div>
   </div>
 </div>
