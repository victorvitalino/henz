<div class="jumbotron"></div>
<div class="container-fluid container-fixed-lg">
  <div class="row">
    <p id="notice"><%= notice %></p>
    <!-- START PANEL -->
    <div class="panel ">
      <div class="panel-heading">
      <div class="panel-title">Listing Vehicles Consumption</div>
        <div class="pull-right m-b-10">
          <%= link_to 'New Vehicle Consumption', new_vehicle_consumption_path, class:'btn btn-primary' %>
        </div>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-hover table-condensed">
            <thead>
              <tr>
                <th>#</th>
                <th>Vehicle</th>
                <th>Km start</th>
                <th>Km end</th>
                <th>Gas liter</th>
                <th>Value liter</th>
                <th>Date</th>
                <th>Number notes</th>
                <th>Observation</th>
                <th>Desk supplie</th>
                <th>Driver</th>
                <th colspan="2">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @vehicle_consumptions.each do |vehicle_consumption| %>
              <tr>
                <td><%= vehicle_consumption.vehicle %></td>
                <td><%= vehicle_consumption.km_start %></td>
                <td><%= vehicle_consumption.km_end %></td>
                <td><%= vehicle_consumption.gas_liter %></td>
                <td><%= vehicle_consumption.value_liter %></td>
                <td><%= vehicle_consumption.date %></td>
                <td><%= vehicle_consumption.number_notes %></td>
                <td><%= vehicle_consumption.observation %></td>
                <td><%= vehicle_consumption.desk_supplie %></td>
                <td><%= vehicle_consumption.driver %></td>
                <td colspan="2">
                 <%= link_to '<i class="fa fa-eye"></i>'.html_safe, vehicle_consumption, class:'btn btn2 btn-complete' %>
                 <%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_vehicle_consumption_path(vehicle_consumption), class:'btn btn2 btn-warning' %>
                 <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, vehicle_consumption_path(vehicle_consumption), class:'btn btn2 btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
               </tr>
               <% end %>
             </tbody>
           </table>
         </div>
       </div>
     </div>
   </div>
 </div>
