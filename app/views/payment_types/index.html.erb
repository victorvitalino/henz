<div class="jumbotron"></div>
<div class="container-fluid container-fixed-lg">
  <div class="row">
    <p id="notice"><%= notice %></p>
    <!-- START PANEL -->
    <div class="panel ">
      <div class="panel-heading">
        <div class="panel-title">Listing Payment</div>
        <div class="pull-right m-b-10">
        <%= link_to 'New Payment Type', new_payment_type_path, class:'btn btn-primary' %>
        </div>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-hover table-condensed">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Account</th>
                <th>Bank</th>
                <th>Status</th>
                <th colspan="2">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @payment_types.each_with_index do |payment_type,i| %>
              <tr>
                <td><%= i+1 %></td>
                <td><%= payment_type.name %></td>
                <td><%= payment_type.account %></td>
                <td><%= payment_type.bank %></td>
                <td><%= payment_type.status %></td>
                <td colspan="2">
                 <%= link_to '<i class="fa fa-eye"></i>'.html_safe, payment_type, class:'btn btn2 btn-complete' %>
                 <%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_payment_type_path(payment_type), class:'btn btn2 btn-warning' %>
                 <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, payment_type_path(payment_type), class:'btn btn2 btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
               </tr>
               <% end %>
             </tbody>
           </table>
         </div>
       </div>
     </div>
   </div>
 </div>
